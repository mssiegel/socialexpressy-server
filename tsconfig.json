{
    "compilerOptions": {
      "target": "es2020",
      "lib": ["esnext"],
      "module": "esnext",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "incremental": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./build",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
  }